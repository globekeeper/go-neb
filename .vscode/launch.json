    "version": "0.2.0",
    "configurations": [
        {
            "name": "API Go-neb",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/goneb.go",
            "env": {
                "BASE_URL": "http://localhost:8008",
                "BIND_ADDRESS": "localhost:4050"
            }
        },
        {
            "name": "ConfigFile Go-neb",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/goneb.go",
            "env": {
                "BASE_URL": "http://localhost:8008",
                "BIND_ADDRESS": "localhost:4050",
                "CONFIG_FILE": "./config-local.yaml"
            }
        }
    ]
}